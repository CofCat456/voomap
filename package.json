{
  "name": "@voomap/monorepo",
  "type": "module",
  "version": "0.0.1-beta.10",
  "private": true,
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "build": "pnpm -r --filter=./packages/** run build",
    "build:map": "pnpm --filter @voomap/map build",
    "build:core": "pnpm --filter @voomap/core build",
    "lint": "eslint './packages/**/*.{ts,vue}'",
    "lint:all": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "publish:ci": "esno scripts/publish.ts",
    "release": "bumpp -r && esno scripts/publish.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.0",
    "@types/fs-extra": "^11.0.1",
    "@types/google.maps": "^3.53.5",
    "@types/node": "^20.4.6",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "bumpp": "^9.1.1",
    "consola": "^3.2.3",
    "eslint": "^8.46.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "pnpm": "^8.6.11",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "unplugin-vue-macros": "^2.4.3",
    "vite": "^4.4.8",
    "vite-plugin-dts": "^3.5.0",
    "vite-plugin-replace": "^0.1.1",
    "vite-plugin-style-inject": "^0.0.1",
    "vitepress": "1.0.0-beta.7",
    "vue": "^3.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{packages}/**/*.{ts,vue}": [
      "pnpm lint"
    ]
  }
}
