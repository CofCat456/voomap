{
  "name": "@voomap/monorepo",
  "version": "0.0.1-beta.25",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "taze": "taze minor -wIr",
    "build": "pnpm --filter './packages/**' build",
    "build:map": "pnpm --filter @voomap/map build",
    "build:core": "pnpm --filter @voomap/core build",
    "clean": "rimraf --glob dist types \"packages/*/dist\"",
    "lint": "eslint './packages/**/*.{ts,vue}'",
    "lint:all": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "docs:dev": "vitepress dev docs --port 2222",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 8080",
    "release": "bumpp -r && esno scripts/publish.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.30",
    "@vitejs/plugin-vue": "^4.6.2",
    "bumpp": "^9.4.0",
    "consola": "^3.2.3",
    "eslint": "^8.57.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.2.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "pnpm": "^8.15.5",
    "rimraf": "^5.0.5",
    "taze": "^0.13.3",
    "typescript": "^5.4.2",
    "unplugin-vue-macros": "^2.7.11",
    "vite": "^4.5.2",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-replace": "^0.1.1",
    "vite-plugin-style-inject": "^0.0.1",
    "vitepress": "1.0.0-beta.7",
    "vue": "^3.4.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{packages}/**/*.{ts,vue}": [
      "pnpm lint"
    ]
  }
}
