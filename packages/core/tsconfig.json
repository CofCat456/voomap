{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "es2020",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve"
  },
  "include": [
    "./*.ts",
    "./components/**/*.ts",
    "./components/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
